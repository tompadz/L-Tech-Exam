<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ltechtest" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/ThemeButton</item>
        <item name="radioButtonStyle">@style/ThemeRadioButton</item>
        <item name="textInputStyle">@style/ThemeTextInput</item>
        <item name="android:textViewStyle">@style/ThemeTextView</item>
        <item name="appBarLayoutStyle">@style/ThemeAppbar</item>
        <item name="bottomSheetDialogTheme">@style/ThemeBottomSheetDialog</item>
    </style>

    <style name="ThemeButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/theme_button</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/theme_button_text</item>
        <item name="android:letterSpacing">0.1</item>
    </style>



    <style name="ThemeRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/blue</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ThemeTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="passwordToggleTint">@color/gray</item>
        <item name="boxStrokeColor">@color/theme_input_stroke</item>
    </style>

    <style name="ThemeTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ThemeAppbar" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ThemeBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ThemeBottomSheet</item>
    </style>

    <style name="ThemeBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ThemeShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="ThemeShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="FilterButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_drop_down</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>